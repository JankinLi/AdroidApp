<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_flag"
        android:layout_width="40sp"
        android:layout_height="120sp"
        android:text="@string/no_selected"
        android:textSize="@dimen/desc_size"
        android:gravity="center"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/clothPicture"
        android:layout_height="120sp"
        android:layout_width="120sp"
        android:layout_marginLeft="10sp"
        android:src="@drawable/ic_launcher"
        android:layout_toRightOf="@id/select_flag"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/clothPicture">

        <TextView
            android:id="@+id/clothDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_example"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:id="@+id/clothType"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/item_example"
            android:textSize="@dimen/type_size"
            android:textColor="@color/typeColor"
            android:layout_below="@id/clothDescription"
            android:layout_marginTop="10sp"/>
    </RelativeLayout>
</RelativeLayout>